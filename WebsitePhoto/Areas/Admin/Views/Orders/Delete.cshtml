@model WebsitePhoto.Models.TbOrder

@{
    ViewData["Title"] = "Xóa đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Xóa đơn hàng</h1>

<h3>Bạn có chắc chắn muốn xóa đơn hàng này không?</h3>
<div>
    <h4>Thông tin đơn hàng</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Ngày đặt hàng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dt class="col-sm-2">
            Trạng thái
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            Đã giao
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Delivered)
        </dd>
        <dt class="col-sm-2">
            Ngày giao hàng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeliveryDate)
        </dd>
        <dt class="col-sm-2">
            Khách hàng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerId)
        </dd>
        <dt class="col-sm-2">
            Giảm giá
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Discount)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="OrderId" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Quay lại danh sách</a>
    </form>
</div>
