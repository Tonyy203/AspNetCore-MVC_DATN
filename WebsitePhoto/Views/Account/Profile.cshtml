@model WebsitePhoto.Models.TbUser
@{
    ViewData["Title"] = "My Profile";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card border-0 shadow rounded-4">
                @if (!string.IsNullOrEmpty(Model.Image))
                {
                        <img src="@Model.Image" class="card-img-top rounded-top" alt="Ảnh người dùng" />
                }
                <div class="card-body p-4">
                    <h4 class="card-title text-center text-success mb-3">@Model.FullName</h4>
                    <ul class="list-group list-group-flush mb-3">
                        <li class="list-group-item"><strong>Tên người dùng:</strong> @Model.UserName</li>
                        <li class="list-group-item"><strong>Email:</strong> @Model.Email</li>
                        <li class="list-group-item"><strong>Số điện thoại:</strong> @Model.Phone</li>
                        <li class="list-group-item"><strong>Địa chỉ:</strong> @Model.Address</li>
                    </ul>

                    <div class="d-grid gap-2">
                        <a class="btn btn-outline-primary" href="@Url.Action("EditProfile", "Account")">Chỉnh sửa thông tin</a>
                        <a class="btn btn-outline-danger" href="@Url.Action("Logout", "Account")">Đăng xuất</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
